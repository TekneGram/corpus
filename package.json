{
  "name": "teknegram",
  "version": "0.1.0",
  "description": "An advanced corpus linguistics application.",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "frontend-build": "cd frontend && npm run build",
    "electron-dev": "npm run electron-build && electron .",
    "electron-build": "tsc -p tsconfig.electron.json",
    "electron-pack": "npm run electron-build && electron-builder"
  },
  "build": {
    "appId": "com.teknegram.corpus",
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "electron/database/**/*",
      "electron/bin/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "extraResources": [
      { "from": "electron/bin/executables", "to": "bin/executables" },
      { "from": "electron/bin/database", "to": "bin/database" }
    ]
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.0.0"
  }
}