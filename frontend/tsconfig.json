{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@context/*": ["app/context/*"],
      "@styles/*": ["app/styles/*"],
      "@app-types/*": ["app/types/*"],
      "@app-api/*": ["app/api/*"],
      "@components/*": ["app/components/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../shared/**/*.ts",
    "../shared/**/*/tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "types/**/*.d.ts",
    "../dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
